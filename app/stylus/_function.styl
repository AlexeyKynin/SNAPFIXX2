button(font-family = RobotoRegular, font-size = 16px, backg-color = #464646, color = #FFFFFF, width=0, height=0, border = none)
  background-color backg-color
  display inline-block
  color color
  text-decoration none
  font-size font-size
  font-family font-family
  border-radius 10em
  text-align: center
  position relative
  outline none

  if (width)
    padding 0
    width width
    height height
    display flex
    justify-content center
    align-items center
  else
    padding 12px 30px

  &:focus, &:hover
    background-color lighten(backg-color, 15%)
    transition background-color .25s ease

icomoon_function(font-size = 110px)
  font-family icomoon
  color #fff
  font-size font-size
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1